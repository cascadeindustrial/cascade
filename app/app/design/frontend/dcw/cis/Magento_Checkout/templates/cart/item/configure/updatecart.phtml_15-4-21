<script>
    require(['jquery', 'jquery/ui'], function($){
      $(document).ready( function() {
        
                $("input[name$='shipping_preference']").click(function() {
                var test = $(this).val();
                console.log(test);
                //alert(test);
               // $("#standdel").show();
                $("#expdel").hide();
                if(test == 1)
                {
                  //alert(steddeli);
                      $("#standdel").show();
                      $("#expdel").hide();
                }
                else{
                          $("#expdel").show();
                          $("#standdel").hide();
                }
            });

        });
    });
</script>
