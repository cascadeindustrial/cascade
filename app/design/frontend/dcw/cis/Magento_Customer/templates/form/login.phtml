        <span class="amsl-icon"><?= $block->escapeHtml(__('or'))?></span>
    </span>
    <div class="amsl-social-wrapper">
        <div class="amsl-social-login <?= ($enabledLabels && $socialButtonsType) ? '-labeled-buttons' : ''?>">
