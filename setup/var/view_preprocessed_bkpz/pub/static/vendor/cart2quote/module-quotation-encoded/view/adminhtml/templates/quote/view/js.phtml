    require([
        "prototype",
        "Cart2Quote_Quotation/quote/view/form",
        "Magento_Catalog/catalog/product/composite/configure",
        "domReady!"
    ], function () {
        
        function initProductConfigure() {
            productConfigure.addListType('product_to_add', {
                urlFetch: '<?php echo $block->escapeHtml($block->getUrl('quotation/quote_view/configureProductToAdd')) ?>'
            });

            productConfigure.addListType('quote_items', {
                urlFetch: '<?php echo $block->escapeHtml($block->getUrl('quotation/quote_view/configureQuoteItems')) ?>'
            });
        }

        Event.observe(window, 'load', function () {
            if (window.productConfigure) {
                initProductConfigure();
            }
        });

        if (window.productConfigure) {
            initProductConfigure();
        }
    });</script>